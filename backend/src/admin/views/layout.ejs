<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel Administrativo Vetya</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome para iconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Estilos personalizados -->
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <% if (typeof adminToken !== 'undefined') { %>
      <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
        <div class="position-sticky pt-3">
          <div class="text-center mb-4">
            <h4 class="text-white">Vetya Admin</h4>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/dashboard">
                <i class="fas fa-tachometer-alt me-2"></i>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/usuarios">
                <i class="fas fa-users me-2"></i>
                Usuarios
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/prestadores">
                <i class="fas fa-user-md me-2"></i>
                Prestadores
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/mascotas">
                <i class="fas fa-paw me-2"></i>
                Mascotas
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/citas">
                <i class="fas fa-calendar-check me-2"></i>
                Citas
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/servicios">
                <i class="fas fa-concierge-bell me-2"></i>
                Servicios
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/emergencias">
                <i class="fas fa-ambulance me-2"></i>
                Emergencias
              </a>
            </li>
            <li class="nav-item mt-5">
              <a class="nav-link text-white" href="/admin/logout">
                <i class="fas fa-sign-out-alt me-2"></i>
                Cerrar sesi√≥n
              </a>
            </li>
          </ul>
        </div>
      </div>
      <% } %>
      
      <!-- Contenido principal -->
      <main class="<%= typeof adminToken !== 'undefined' ? 'col-md-9 ms-sm-auto col-lg-10 px-md-4' : 'col-12' %>">
        <% if (typeof adminToken !== 'undefined') { %>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><%= typeof title !== 'undefined' ? title : 'Panel Administrativo' %></h1>
        </div>
        <% } %>
        
        <%- body %>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS y dependencias -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Scripts personalizados -->
  <script src="/js/admin.js"></script>
</body>
</html>
